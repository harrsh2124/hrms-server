// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Leave {
  id               Int      @id @unique @default(autoincrement())
  startDate        DateTime
  endDate          DateTime
  reason           String
  isApproved       Boolean  @default(false)
  // 
  appliedByUserId  Int
  appliedByUser    User     @relation(fields: [appliedByUserId], references: [id], name: "AppliedBy")
  // 
  approvedByUserId Int      @unique
  approvedByUser   User     @relation(fields: [approvedByUserId], references: [id], name: "ApprovedBy")
  // 
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model User {
  id                Int      @id @unique @default(autoincrement())
  // 
  firstName         String
  lastName          String
  // 
  contactNumber     String   @unique
  email             String   @unique
  password          String
  // 
  role              UserRole @default(EMPLOYEE)
  joiningDate       DateTime
  // 
  isActive          Boolean  @default(true)
  isDeleted         Boolean  @default(false)
  isConfirmed       Boolean  @default(false)
  confirmationToken String?
  // 
  appliedLeave      Leave[]  @relation(name: "AppliedBy")
  approvedLeave     Leave?   @relation(name: "ApprovedBy")
  // 
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum UserRole {
  EMPLOYEE
  MANAGER
}
